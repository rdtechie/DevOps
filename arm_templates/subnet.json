{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "WeEu",
            "allowedValues": [
                "WeEu",
                "NoEu"
            ],
            "metadata": {
                "description": "AHIT ID of the Azure Location"
            }
        },
        "subscription": {
            "type": "string",
            "defaultValue": "S03",
            "allowedValues": [
                "S01",
                "S02",
                "S03",
                "PLY"
            ],
            "metadata": {
                "description": "AHIT ID of the Azure Subscription"
            }
        },
        "environment": {
            "type": "string",
            "defaultValue": "Dev",
            "allowedValues": [
                "Dev",
                "Tst",
                "Acc",
                "Prd"
            ],
            "metadata": {
                "description": "AHIT ID of the Environment"
            }
        },
        "description": {
            "type": "string",
            "metadata": {
                "description": "AHIT Subscription of the Application"
            }
        },
        "subnetIncrement": {
            "type": "string",
            "defaultValue": "01",
            "metadata": {
                "description": "Subnet Number to Add"
            }
        },
        "subnetAddressPrefix": {
            "type": "string",
            "defaultValue": "10.232.82.0/28",
            "metadata": {
                "description": "Address space of the subnet to add"
            }
        },
        "virtualNetworkIncrement": {
            "type": "string",
            "defaultValue": "01",
            "metadata": {
                "description": "vNet Number"
            }
        }
    },
    "variables": {
        "subnetName": "[concat(parameters('location'),'-',parameters('subscription'),'-',parameters('environment'),'-Vnet-Snt-',parameters('description'),'-',parameters('subnetIncrement'))]",
        "vnetName": "[concat(parameters('location'),'-',parameters('subscription'),'-',parameters('environment'),'-Vnet-',parameters('virtualNetworkIncrement'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks/subnets",
            "apiVersion": "2018-04-01",
            "name": "[concat(variables('vnetName'), '/', variables('subnetName'))]",
            "location": "[resourceGroup().location]",
            "properties": {
              "addressPrefix": "[parameters('subnetAddressPrefix')]"
            }
          }
    ],
    "outputs": {
        "locationID": {
            "type": "string",
            "value": "[concat(parameters('location'),'\t<= the location where the Azure Resources will be deployed')]"
        },
        "subscriptionID": {
            "type": "string",
            "value": "[concat(parameters('subscription'),'\t<= the subscription where the Azure Resources will be deployed')]"
        },
        "environmentID": {
            "type": "string",
            "value": "[concat(parameters('environment'),'\t<= the environment where the Azure Resources will be deployed')]"
        },
        "descriptionID": {
            "type": "string",
            "value": "[concat(parameters('description'),'\t<= the description of Azure Resources that will be deployed')]"
        },
        "subnetName": {
            "type": "string",
            "value": "[concat(variables('subnetName'),'\t<= the description of Azure Resources that will be deployed')]"
        },
        "vnetName": {
            "type": "string",
            "value": "[concat(variables('vnetName'),'\t<= the description of Azure Resources that will be deployed')]"
        }
    }
}
